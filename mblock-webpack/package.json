{
  "name": "mblock-webpack",
  "version": "0.0.3",
  "description": "webpack builder",
  "scripts": {
    "compile": "babel -d lib/ src/",
    "start": "babel -d lib/ src/ -w",
    "build": "npm run clean-lib && standard && npm run compile",
    "clean-lib": "rimraf ./lib",
    "copypackage": "cp -rf package.json lib",
    "publish:npm": "npm run build && npm run copypackage && cd lib && npm publish"
  },
  "keywords": [
    "webpack",
    "build"
  ],
  "author": "Dadviegas",
  "license": "ISC",
  "dependencies": {
    "mblock-babel": "latest",
    "mblock-utils": "latest",
    "webpack": "^3.5.5",
    "webpack-merge": "^4.1.0"
  },
  "standard": {
    "ignore": [
      "/lib/"
    ]
  }
}
